<section class="guides_repeater">
  <div class="row">
    <div class="guides_wrapper">
      {% for block in section.blocks %}
      <div class="guide">
        <h2>{{ block.settings.title }}</h2>
        <div class="content">
          {{ block.settings.content }}
        </div>
        <a href="{{ block.settings.buttonlink }}">
          {{ block.settings.buttonlabel }}
        </a>
        <iframe src="//www.youtube.com/embed/{{ block.settings.embedid }}?rel=0&showinfo=0&vq=720" width="981" height="454" frameborder="0" allowfullscreen></iframe>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Guides Repeater",
	"settings": [
	],
"blocks": [
      {
        "type": "guide",
        "name": "Guide",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Guide Name"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "Content"
          },
		 {
            "type": "text",
            "id": "buttonlabel",
            "label": "Button Label"
          },
		{
            "type": "url",
            "id": "buttonlink",
            "label": "Button Link"
          },
		{
            "type": "text",
            "id": "embedid",
            "label": "Youtube Video Embed ID"
          }
        ]
      }
    ],
"presets": [
    {
      "name": "Guides Repeater Section"
    }
  ]
  }
{% endschema %}

